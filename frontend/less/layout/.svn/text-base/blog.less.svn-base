//
// blog.less - Blog Styles
//
#blog-page {
    max-width:960px;
    margin:0 auto;
    h1.heading {
        display:block;
        width:100%;
        height:80px;
        line-height:80px;
        vertical-align:middle;
        text-align:center;
        padding:0;
        margin:0;
        border-bottom:1px solid rgba(0,0,0,.1);
    }
    .post {
        padding:10px;
        h1.title {
            font-size:1.6em;
            padding:0;
            margin:0;
        }
        h2.date {
            font-weight:normal;
            font-size:0.8em;
            color:@gray;
            padding:5px 0;
            margin:0;
        }
        div.post-content {
            padding-bottom:20px;
            border-bottom:1px solid rgba(0,0,0,.1);
        }
    }
}
