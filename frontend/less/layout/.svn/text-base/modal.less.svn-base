//
// modal.less - Modal Styles
//

#modal-container {
    display:none;
    .modal-box {
        position:fixed;
        z-index:@modalZ;
        display:box;
        .box-sizing(border-box);
        height:auto;
        bottom:0;
        top:0;
        left:0;
        right:0;
        margin:(@modalMargin + @toolbarHeight) @modalMargin;
        background:@modalColor;
        .border-radius(2px);
        border:1px solid lighten(@modalColor, 10%);
        .box-shadow(0px 0px 5px rgba(0,0,0,.5));

        .close-btn {
            .unselectable;
            position:absolute;
            left:100%;
            margin-left:-14px;
            margin-top:-14px;
        }

        iframe.modal-content {
            width:100%;
            height:100%;
        }
    }
}
